<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SudokuSolver.ViewModels"
             mc:Ignorable="d" d:DesignWidth="192" d:DesignHeight="192"
             x:Class="SudokuSolver.SudokuBoxControl">
  <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="1" Background="WhiteSmoke">
    <UniformGrid Name="grid" Rows="3" Columns="3">
      <!-- SudokuCellControls will be added here dynamically -->
    </UniformGrid>
  </Border>
</UserControl>
